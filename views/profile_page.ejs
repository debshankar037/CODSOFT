<!DOCTYPE html>
<html>
<head>
    <title>Sky Travels</title>
    <style>
        body {
            font-family: cursive;
            background-color: #f4f4f9;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
            margin: 0;
        }
        .container {
            background-color: #ffffff;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 30px;
            max-width: 800px;
            width: 100%;
            margin: 20px 0;
        }
        h1 {
            color: #4CAF50;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #f4f4f9;
        }
        .button {
            display: inline-block;
            margin: 10px;
            padding: 10px 20px;
            font-size: 16px;
            color: #ffffff;
            background-color: #4CAF50;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
        }
        .button:hover {
            background-color: #45a049;
        }
        .header{
            font-family: cursive !important;
            background-color: #05203c !important;
            height: 150px !important;
            width: 1382px !important;
        }
        #carButton,#flightButton,#hotelButton{
        background: transparent !important;
        border:solid 1px white !important;
    }
    #carButton:hover,#flightButton:hover,#hotelButton:hover{
        background-color: rgb(32, 94, 252)  !important;
        border:solid 1px white !important;
    }
    .footer-distributed{
        position:relative;
        bottom:-100px;
    }
    </style>
    <link rel="icon" type="image/png" href="/images/favicon.ico">
</head>
<body>
    <%-include('header.ejs')%>
    <div class="container">
        <h1>Welcome aboard <%=userName%></h1>
        <table>
            <tr>
                <th>Transaction Date</th>
                <th>Transaction Amount</th>
                <th>Invoices</th>
            </tr>
            <% transactions.forEach(transaction => { %>
                <tr>
                    <td><%= new Date(transaction.transactionDate).toLocaleString() %></td>
                    <td>â‚¬<%= transaction.transactionAmount %></td>
                    <td>
                        <a href="/download-invoice?invoicePath=<%= encodeURIComponent(transaction.invoicePdf) %>" class="button">Download Invoice</a>
                    </td>
                </tr>
            <% }) %>
        </table>
    </div>
    <script src="/flightInput.js"></script>
</body>
<%-include("footer.ejs")%>
</html>