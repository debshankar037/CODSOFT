<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sky Travels</title>
    <style>
        body {
            font-family: cursive;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
            color: #333;
        }
        input{
            font-family: cursive;
            font-weight: 900;
        }
        .container {
            width: 80%;
            margin: 30px auto 30px;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        header {
            text-align: center;
            padding-bottom: 20px;
            border-bottom: 1px solid #ddd;
        }

        header h1 {
            margin: 0;
            font-size: 2.5em;
            color: #0066cc;
        }

        main {
            padding: 20px;
        }

        .form-section,
        .blogs-section {
            margin-bottom: 40px;
        }

        .form-section h2,
        .blogs-section h2 {
            margin-bottom: 20px;
            font-size: 1.5em;
            color: #0066cc;
        }

        label {
            font-weight: bold;
            margin-top: 10px;
            display: block;
        }

        input[type="text"],
        textarea {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        textarea {
            height: 100px;
            resize: vertical;
            font-family: cursive;
            font-weight: 900;
        }

        input[type="submit"] {
            display: block;
            width: 620px;
            padding: 10px;
            font-size: 1em;
            color: #fff;
            background-color: #0066cc;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        input[type="submit"]:hover {
            background-color: #005bb5;
        }

        ul {
            list-style-type: none;
            padding: 0;
        }

        ul li {
            margin-bottom: 20px;
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }

        ul li h3 {
            margin: 0;
            font-size: 1.2em;
            color: #333;
        }

        ul li p {
            margin: 10px 0;
            font-size: 0.9em;
            color: #666;
        }

        ul li img {
            margin-top: 10px;
            border-radius: 5px;
        }
        #hotelButton,#flightButton{
        background: transparent;
        border:solid 1px white;
    }
    #carButton{
        background-color: rgb(32, 94, 252);
        border: 0px;
    }
    label{
        font-size: 20px;
    }
    </style>
    <link rel="icon" type="image/png" href="/images/favicon.ico">
</head>
<body>
    <%-include("header.ejs")%>
    <div class="container">
        <header>
            <h1>Travel Blogs</h1>
        </header>
        
        <main>
            <section class="form-section">
                <h2>Create a New Blog:></h2>
                <form method="POST" action="/blog">
                    <label for="title">Title:</label><br>
                    <input type="text" id="title" name="title" required><br>
                    
                    <label for="content">Content:</label><br>
                    <textarea id="content" name="content" required></textarea><br>
                    
                    <input type="submit" value="Save">
                </form>
            </section>  
            <section class="blogs-section">
                <h2>Popular Blogs</h2>
                <ul>
                    <% if (popular_blogs.length > 0) { %>
                        <% popular_blogs.forEach(function(blog) { %>
                            <li>
                                <h3><%= blog.title %></h3>
                                <p><%= blog.content.substring(0, 1000) %>...</p>
                            </li>
                        <% }); %>
                    <% } else { %>
                        <p>No popular blogs to show, be the first one.</p>
                    <% } %>
                </ul>
                
                <h2>All Blogs</h2>
                <ul>
                    <% if (blogs.length > 0) { %>
                        <% blogs.forEach(function(blog) { %>
                            <li>
                                <h3><%= blog.title %></h3>
                                <p><%= blog.content.substring(0, 1000) %>...</p>
                            </li>
                        <% }); %>
                    <% } else { %>
                        <p>No blogs to show, be the first one.</p>
                    <% } %>
                </ul>
            </section>
        </main>
    </div>
    <script src="/flightInput.js"></script>
</body>
<%-include("footer.ejs")%>
</html>

